# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite://./ocpp.db?mode=rwc

# PostgreSQL (uncomment to use)
# DATABASE_URL=postgres://user:password@localhost:5432/ocpp

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRATION_HOURS=24

# Default Admin User (created on first run if no users exist)
# Login accepts both username ("admin") and email
ADMIN_EMAIL=admin@texnouz.com
ADMIN_PASSWORD=admin123

# Logging
RUST_LOG=info

# Server Ports
# REST API runs on port 8080
# WebSocket OCPP server runs on port 9000
