{
  "productName": "Texnouz OCPP",
  "version": "0.1.0",
  "identifier": "com.texnouz.ocpp",
  "build": {
    "frontendDist": "./frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "settings",
        "title": "Texnouz OCPP — Настройки",
        "width": 600,
        "height": 720,
        "visible": false,
        "center": true,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [
      "binaries/ocpp-service"
    ],
    "copyright": "© 2026 Texnouz",
    "category": "Utility",
    "shortDescription": "OCPP 1.6 Central System for EV Charging Stations",
    "longDescription": "Texnouz OCPP — система управления зарядными станциями электромобилей по протоколу OCPP 1.6. Включает REST API, WebSocket-сервер, веб-интерфейс и системный трей.",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libappindicator3-1"
        ],
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "gtk3",
          "libappindicator-gtk3"
        ]
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "languages": ["English", "Russian"],
        "displayLanguageSelector": true,
        "installMode": "both"
      }
    }
  }
}
